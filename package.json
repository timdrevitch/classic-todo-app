    "url": "https://github.com/"
  },
  "homepage": "https://github.com/",
  "dependencies": {
    "@types/express": "^4.17.14",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.11.8",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "mongoose": "^6.7.0",
    "ordinal": "^1.0.3"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "nodemon": "^2.0.20",
    "ts-loader": "^9.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
